<h1>All Flats</h1>

<%= link_to 'Create',  new_flat_path %>
<br>

<% @flats.each do |flat| %>
  <p> <%= link_to flat.name, flat_path(flat) %> <br>
  <%= flat.address %> <br>
  <%= flat.description %> <br>
  <%= flat.occupancy %>
  </p>

<% end %>

<div id="map"
     style="width: 100%; height: 600px;"
     data-markers="<%= @markers.to_json %>"
     data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
