<h1 class="flat_heading">Available Flats</h1>

<section class="container">
 <% @flats.each do |flat| %>
  <div class="card col-lg-12 col-sm-6 mx-auto" style="width: 24rem;">
    <img src="https://source.unsplash.com/200x200/?cocktails/" class="card-img-top" alt="...">
    <div class="card-body">
      <p class="card-title"> <%= link_to flat.name, flat_path(flat) %> <br>
      <p>
      <%= flat.address %> <br>
      </p>
      <%= link_to "Flat Details", flat_path(flat), class: "btn btn-primary btn-lg" %>
    </div>
  </div>
  <% end %>
</section>
