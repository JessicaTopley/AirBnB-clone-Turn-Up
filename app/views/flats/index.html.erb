<h1 class="flat_heading">Available Flats</h1>

<section class="container-custom">
 <% @flats.each do |flat| %>
  <div class="card col-lg-12 col-sm-6 mx-auto" style="width: 24rem;">
    <%= cl_image_tag flat.photo.key, height: 300, crop: :fill %>

    <div class="card-body">
      <p class="card-title"> <%= link_to flat.name, flat_path(flat) %> <br>
      <p>
      <%= flat.address %> <br>
      </p>
      <%= link_to "Flat Details", flat_path(flat), class: "standard-button" %>
    </div>
  </div>
  <% end %>
</section>

<div id="map"
   style="width: 100%; height: 600px;"
   data-markers="<%= @markers.to_json %>"
   data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>



