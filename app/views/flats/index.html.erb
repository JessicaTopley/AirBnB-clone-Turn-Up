<div class = "profile-banner">
  <div class = "container">
    <h1 class="flat-heading"> Available Flats </h1>
  </div>
</div>

<!-- <h1 class="flat_heading">Search Flats</h1> -->

<div id="map"
   style="width: 100%; height: 300px; margin-top: 32px; margin-bottom: 24px;"
   data-markers="<%= @markers.to_json %>"
   data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<section class="container-custom">

 <% @flats.each do |flat| %>
  <div class="card col-lg-12 col-sm-6 mx-auto" style="width: 24rem;">
    <!-- <a href="link_to 'Flat Details', flat_path(flat)"> -->
    <%= cl_image_tag flat.photo.key, height: 300, crop: :fill %>

    <div class="card-body">
      <p class="card-title"> <%= flat.name %> <br>
      <p>
      <%= flat.address %> <br>
      </p>
      <%= link_to "Flat Details", flat_path(flat), class: "standard-button" %>
    </div>
<!-- </a> -->
  </div>
  <% end %>
</section>





