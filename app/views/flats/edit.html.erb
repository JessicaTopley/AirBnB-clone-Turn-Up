<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-auto">
      <h1> Edit flat</h1>
       <div class="d-flex form">
      <%= simple_form_for @flat do |f| %>
        <div class="form-inputs">
          <%= f.input :name %>
          <%= f.input :address %>
          <%= f.input :description %>
          <%= f.input :occupancy %>
          <%= f.submit %>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
